<div class='row-fluid'>
    <div class='col-lg-12'>
        {{if inscripciones:}}
            <div class='table-responsive' style="margin-top:10px;">
                <table id='persona-inscripciones' class="table table-striped table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Cursos</th>
                            <th>Docente?</th>
                            <th>Finalizo</th>
                            <th>Pago</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{for row in inscripciones:}}
                            <tr>
                                <td>{{=row.curso.titulo}}</td>
                                <td>{{if row.docente:}}
                                        <center><span class='glyphicon glyphicon-ok'></span></center>
                                    {{else:}}
                                        <center><span class='glyphicon glyphicon-remove'></span></center>
                                    {{pass}}
                                </td>
                                 <td>{{if row.acreditado:}}
                                        <center><span class='glyphicon glyphicon-ok'></span></center>
                                    {{else:}}
                                        <center><span class='glyphicon glyphicon-remove'></span></center>
                                    {{pass}}
                                </td>
                                <td>{{if row.pago:}}
                                        <center><span class='glyphicon glyphicon-ok'></span></center>
                                    {{else:}}
                                        <center><span class='glyphicon glyphicon-remove'></span></center>
                                    {{pass}}
                                </td>
                            </tr>
                        {{pass}}
                    </tbody>
                </table>
        {{pass}}
    </div>
</div>

<script>
    $('#persona-inscripciones').dataTable();
</script>
